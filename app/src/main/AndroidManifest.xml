<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nomi.rsixports">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RSixSports">
        <activity
            android:name=".HistoryActivity"
            android:label="Purchase History"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.RSixSports.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="Register"
            android:parentActivityName=".SplashActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="Login"
            android:parentActivityName=".SplashActivity" />
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name=".ProfileActivity"
            android:label="Profile Detail"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".DetailActivity"
            android:label="Product Detail"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".OrderActivity"
            android:label="Order Placement"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SuccessActivity"
            android:label="Success Checkout"
            android:parentActivityName=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>